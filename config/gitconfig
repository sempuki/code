[alias]
    bl = blame
    br = branch
    ci = commit
    cam = commit --amend -CHEAD
    cl = clone
    co = checkout
    df = diff
    fe = fetch
    fm = fetch origin main
    lg = log --color --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset'
    lgg = log --color --graph --abbrev-commit --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr)%C(bold blue)<%an>%Creset'
    pl = pull
    prb = pull --rebase
    pu = push
    re = remote
    rb = rebase
    rbs = rebase --autostash
    st = status
    sh = stash
[apply]
    whitespace = strip
[diff]
    color = auto
    rename = copy
[pager]
    color = true 
[status]
    color = auto
[color]
    branch = auto
    diff = auto
    status = auto
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    excludesfile = ~/.gitignore
    #autocrlf = true                # used in Windows
    autocrlf = input                # used in Unix
[push]
    default = simple
[credential]
    helper = cache --timeout=3600
[merge]
    tool = vimdiff
[mergetool]
    prompt = false
[mergetool "vimdiff"]
	cmd = nvim -f -c "Gdiffsplit!" "$MERGED"
[commit]
    template=~/.gitmessage
[rebase]
    instructionFormat = %s [%an]
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[blame]
	ignoreRevsFile = .git-blame-ignore-revs
